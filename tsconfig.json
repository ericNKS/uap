{
    "compilerOptions": {
      "target": "ES2020",            // Define a versão do JavaScript gerada
      "module": "commonjs",          // Define o sistema de módulos
      "rootDir": "src",              // Pasta de origem dos arquivos .ts
      "outDir": "dist",              // Pasta de saída dos arquivos compilados
      "strict": true,                // Ativa as verificações estritas de tipo
      "esModuleInterop": true,       // Habilita a interoperabilidade entre módulos ES e CommonJS
      "skipLibCheck": true,          // Ignora checagem de tipos em arquivos de definição de bibliotecas
      "forceConsistentCasingInFileNames": true // Garante consistência no nome dos arquivos
    },
    "include": [
      "src/**/*.ts"                  // Inclui todos os arquivos .ts dentro da pasta src
    ],
    "exclude": [
      "node_modules"                 // Exclui a pasta node_modules da compilação
    ]
  }
  